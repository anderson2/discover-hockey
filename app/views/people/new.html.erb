<% provide(:title, 'Sign up') %>

<div class="center">
  <h1>Welcome!</h1>
  <h4>Accepting new sign ups beginning February 1, 2015</h4><br/>

  
  <div class="center jumbotron">
    <%= image_tag "linden-canucks.jpg" %>
  </div>
  
</div>


<div class="center">
  <h1>or</h1>
  <h3>Help <%= link_to "test drive", login_path %> and beta test the site</h3>

  <h4>Your comments and feedback are welcome!!</h4><br/>
  
  <h3>Beta testing sign up</h3>

  <div class="row">
    <div class="col-md-6 col-md-offset-3">
      <%= form_for(@person) do |f| %>
        <%= render 'shared/error_messages' %>
  
        <%= f.label :name %>
        <%= f.text_field :name, class: 'form-control' %>
  
        <%= f.label :email %>
        <%= f.email_field :email, class: 'form-control' %>
  
        <%= f.label :password %>
        <%= f.password_field :password, class: 'form-control' %>
  
        <%= f.label :password_confirmation, "Confirmation" %>
        <%= f.password_field :password_confirmation, class: 'form-control' %>
  
        <%= f.submit "Create my account", class: "btn btn-primary" %>
      <% end %>
    </div>
  </div>

</div>

